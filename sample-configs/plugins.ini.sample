; === Plugin-Specific Settings ===

[autotools.settings]
; Auto-move completed torrents
autotools.automove.enabled = yes
; Auto-label by tracker
autotools.autolabel.enabled = yes

[scheduler.settings]
; Update interval in seconds
scheduler.interval = 60

[rss.settings]
; RSS update interval in seconds
rss.interval = 600
; Maximum items per feed
rss.maxItems = 100

[unpack.settings]
; Add .unpack suffix to unpacking torrents
unpack.addName = yes
; Path to unrar binary
unpack.unrarPath = /usr/bin/unrar

[create.settings]
; Default tracker for created torrents
; create.defaultTracker = "udp://tracker.example.com:6969/announce"

[throttle.settings]
; Remember throttle state
throttle.remember = yes

; === End of Configuration ===
