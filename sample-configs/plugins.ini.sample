; ruTorrent Plugins Configuration (plugins.ini)
; This file controls which plugins are enabled/disabled
; Sample configuration for demonstration and testing

[default]
; Default settings for all plugins
enabled = yes
canChangeToolbar = yes
canChangeMenu = yes
canChangeOptions = yes
canChangeTabs = yes
canChangeColumns = yes
canChangeStatusBar = yes
canChangeCategory = yes
canBeShutdowned = yes

; === Core Plugins (required) ===

[_task]
; Task manager (internal plugin)
enabled = yes

[_getdir]
; Directory browser (internal plugin)
enabled = yes

[_noty]
; Notification system (internal plugin)
enabled = yes

; === Essential Plugins ===

[autotools]
; Automation tools (auto-label, auto-move, etc.)
enabled = yes

[chunks]
; Display chunk visualization
enabled = yes

[data]
; Data directory management
enabled = yes

[datadir]
; Advanced data directory features
enabled = yes

[diskspace]
; Disk space display
enabled = yes

[erasedata]
; Secure data deletion
enabled = yes

[edit]
; Edit torrent properties
enabled = yes

[extsearch]
; External torrent search
enabled = no
; If enabled, configure search engines:
; searchEngines = "PirateBay,KickAssTorrents,1337x"

[filedrop]
; Drag & drop torrent files
enabled = yes

[files]
; File list display
enabled = yes

[geoip]
; GeoIP peer location
enabled = yes
; Requires GeoIP database in share/geoip/

[ratio]
; Ratio control and groups
enabled = yes

[rss]
; RSS feed reader and auto-download
enabled = yes

[rssurlrewrite]
; RSS URL rewriting for trackers
enabled = yes

[screenshots]
; Screenshot capture
enabled = no

[scheduler]
; Bandwidth scheduler
enabled = yes

[seedingtime]
; Track seeding time
enabled = yes

[source]
; View/edit .torrent source
enabled = yes

[throttle]
; Global throttle control
enabled = yes

[tracklabels]
